# EditorConfig for Code Compiler & Executer

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{c,h}]
indent_size = 4

[*.{cpp,hpp}]
indent_size = 4

[*.py]
indent_size = 4

[*.js]
indent_size = 2

[*.java]
indent_size = 4

[*.go]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_size = 4

[*.cmake]
indent_size = 4

[*.yml,*.yaml]
indent_size = 2

[*.json]
indent_size = 2
